<nav class="navbar navbar-light bg-light">
  <span class="navbar-brand mb-0 h1">Habit Streak</span>
</nav>
<section>
  <%= link_to "New Habit", new_habit_path %>
  
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Description</th>
        <th scope="col">Streak</th>
        <th scope="col">Edit/Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @habits.each do |habit| %>
        <tr>
          <td><%= habit.name %></td>
          <td>1 day</td>
          <td><%= link_to "Edit", edit_habit_path(habit) %>/<%= link_to "Delete", habit_path(habit), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<section>
  <%= button_to "Make a record", records_path, method: :post %>

  <table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">date</th>
      <th scope="col">Description</th>
      <th scope="col">Done</th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.created_at %></td>
        <td><%= record.habit.name %></td>
        <td>
          <div class="form-check">
            <%= check_box :record, :done, {class: "form-check-input"}, true, false %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>